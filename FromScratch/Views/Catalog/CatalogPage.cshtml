@model IPagedList<ProjectDTO>
@{
    ViewData["Title"] = "Catalog";
    Layout = "~/Views/Shared/Layouts/_CatalogLayout.cshtml";

}
    <div class="middle-row ">

        <form asp-controller="Catalog" asp-action="CatalogPage" method="get">
            <h1>
                Projects

                <input type="search" class="search" name="search" placeholder="Search..">
            </h1><br>
            @*<div class="categories">
                <div class="categoryWidth">
                    <input type="button" value="Front-End"><input type="button" value="Back-End"><input type="button"
                                                                                                        value="Database">
                    <div class="categoryRow">
                        <input type="button" value="Web"><input type="button" value="Desktop"><input type="button"
                                                                                                     value="Mobile">
                    </div>
                </div>
            </div>*@

            <div>
                <label for="inputState">Choose a Sphere</label>
                <select id="inputState" name="sphereName">
                    <option selected>Select Sphere</option>
                    <option value="Front-End">Front-End</option>
                    <option value="Back-End">Back-End</option>
                    <option value="Mobile">Mobile</option>
                    <option value="Database">Database</option>
                </select>
            </div>
            <input type="submit" value="Seach" class="searchbtn">
        </form>

        <div>

            <div class="top-row">

                <div class="row">
                    @foreach (var item in Model)
                    {
                        <a href="#">
                            <div class="middle-column">
                                <div class="inside-column">
                                    <a asp-controller="catalog" asp-action="project">
                                        <div class="cardBorder">
                                            <h3 class="tag">@item.ProjectName  | @item.Type  | @item.Rating</h3>
                                        </div>
                                        <div class="descriptionPadding">
                                            <p class="Description">
                                                @item.Description
                                            </p>
                                        </div>
                                        <div class="cardFoot">
                                            @foreach (var sphere in item.Sphere)
                                            {
                                                <input type="button" value="@sphere">
                                            }
                                        </div>

                                    </a>
                                </div>
                            </div>
                        </a>
                    }
                </div>

            </div>


        </div>

        @*////////////////////////////////////////////////*@
        @*<div class="pagination-row">
                <div class="pagination">
                    <a href="#">&laquo;</a>
                    <a href="#" class="active">1</a>
                    <a href="#">2</a>
                    <a href="#">3</a>
                    <a href="#">4</a>
                    <a href="#">5</a>
                    <a href="#">6</a>
                    <a href="#">&raquo;</a>
                </div>
            </div>
        </div>*@

        <div class="justify-content-center" style="padding-left: 300px;">
            @Html.PagedListPager(Model, page => Url.Action("CatalogPage", new { page = page }),
        new X.PagedList.Mvc.Core.Common.PagedListRenderOptions
        {
           DisplayItemSliceAndTotal = true,
           ContainerDivClasses = new[] { "navigation" },
           LiElementClasses = new[] { "page-item" },
           PageClasses = new[] { "page-link" }
        })
        </div>
        @section Scripts{
            <script>
                $(document).ready(function () {
                    $('ul.pagination > li.disabled > a').addClass('page-link');
                });
            </script>
        }
