@model UserInfoDTO
@{
    ViewData["Title"] = "Home Page";
}

    <div class="middle-row ">

        <div class="middleColumn-left container">
            <a href="#"><img src="~/images/user.png" class="img" width="128px" height="128px"></a>
            <h3>@User.Identity.Name</h3>
            <h3>
                About &#160;&#160;
                <button id="myBtn" style="width:auto;">
                    <img src="~/images/edit.png">
                </button>
            </h3>

            <form asp-controller="Home" asp-action="UserInfo" method="post">
                <div id=" myModal" class="modal">
                    <div class="modal-content">
                        <span class="close">&times;</span>
                        <div class=" userInfo">

                            <div class="aboutUser">
                                <p>
                                    Full Name :
                                    <input type="text" value="John Doe">
                                </p>
                                <p>
                                    Gemder :
                                    <div class="genders">
                                        <input type="radio" name="gender" id="male" value="male" checked><label for="male">Male</label>
                                        <input type="radio" name="gender" id="female" value="female"><label for="female">Female</label>
                                        <input type="radio" name="gender" id="other" value="other"><label for="other">Other</label>
                                    </div>

                                </p>
                                <p>
                                    Birth Date :

                                </p>
                            </div>

                            <p>
                                Mail :
                                <input type="email" value="JohnDoe@gmail.com">
                            </p>
                            <p>
                                Phone :
                                <input type="text" maxlength="9" value="598112358">
                            </p>
                            <p>
                                City :
                                <input type="text" value="Tbilisi">
                            </p>
                        </div>
                        <div class="userEducation">
                            <p>Proffesion : <input type="text" value="FullStack Developer"> </p>
                            <p>Education : <input type="text" value="Tbilisi State University"></p>
                            <p>Degree : <input type="text" value="Computer Science"></p>

                        </div>
                        <input type="submit" value="Submit" class="submitBtn">


                    </div>
                </div>
            </form>

            <div class=" userInfo">
                <div class="aboutUser">
                    <p>Full Name : <label>@Model.FullName</label> </p>
                    <p>Gender : <label>@Model.GenderKey</label></p>
                    <p>Birth Date : <label>@Model.BirthDate</label></p>
                    <p>Mail : <label>@ViewBag.Mail</label></p>
                    <p>Phone : <label>@Model.PhoneNumber</label></p>
                    <p>Country : <label>@Model.CountryKey</label></p>
                </div>
                <div class="userEducation">
                    <p>Proffesion : <label>@Model.Proffesion</label> </p>
                    <p>Education : <label>@Model.Education</label></p>
                    <p>Rating : <label>@Model.Rating</label></p>
                </div>
            </div>
        </div>
<div class="middleColumn-right container">
    <form asp-controller="" asp-action="" method="post">
        <h3>
            About Me &#160;&#160;<button class="aboutSubmit" href="#" type="submit">
                <img src="~/images/edit.png"
                     style="float: right;">
            </button>
        </h3>


        <textarea>@Model.AboutMe</textarea>
    </form>

    @foreach (var skill in Model.Skills)
