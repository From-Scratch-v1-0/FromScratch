    <form asp-controller="" asp-action="" method="post">
        <div id="myModal2" class="modal2">

            <div class="modal-content2">
                <span class="close2">&times;</span>
                <input type="text" placeholder="Add or Delete your Skill">
                <button type="submit" class="skillBtn">Add Skill</button>
                <button type="button" class="skillBtn">Delete</button>
            </div>

        </div>
    </form>

    <div class="mySkills">
